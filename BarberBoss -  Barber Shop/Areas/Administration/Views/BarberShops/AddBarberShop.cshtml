@model BarberBoss___Barber_Shop.ViewModels.BarberShops.BarberShopsInputModel
@{
    this.ViewData["Title"] = "Add BarberShop";
    var barberService = this.ViewData["BarberServices"] as SelectList;
    var towns = this.ViewData["Towns"] as SelectList;
}

<div class="col-xl-10">
    <h2>New Barber Shop</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <input type="file" asp-for="@Model.Image" class="form-control-file image-upload" required="required" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">BarberService</label>
            <div class="col-sm-10">
                <select asp-for="@Model.BarberServiceId" class="form-control" asp-items="@barberService">
                </select>
                <span asp-validation-for="BarberServiceId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Town</label>
            <div class="col-sm-10">
                <select asp-for="@Model.TownId" class="form-control" asp-items="@towns">
                </select>
                <span asp-validation-for="TownId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Address" class="form-control" required="required">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="BarberShops" asp-action="AddBarberShop">
                    Add Barber Shop
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="BarberShops" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/upload-image.js" asp-append-version="true"></script>
}
